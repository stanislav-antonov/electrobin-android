<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <LinearLayout
            android:id="@+id/common_layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:gravity="center_horizontal"
            >
            <TableLayout
                android:id="@+id/table"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                >
                <TableRow
                    android:layout_height="wrap_content"
                    android:background="#00a0d4"
                    android:layout_width="0dp"
                    >
                    <TextView
                        android:id="@+id/fill_text"
                        android:padding="10dp"
                        android:textSize="16sp"
                        android:gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/count_text"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        />
                    <TextView
                        android:id="@+id/volume_text"
                        android:padding="10dp"
                        android:gravity="center_horizontal"
                        android:textSize="16sp"
                        android:textColor="#ffffff"
                        android:fontFamily="sans-serif-light"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        />
                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#32abd7"
                    android:paddingTop="5dp"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_1_legend"
                            android:layout_height="45dp"
                            android:layout_width="45dp"
                            android:text="%"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            />
                        <TextView
                            android:id="@+id/category_1_name"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_width="95dp"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-light"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_1_count"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-light"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_1_volume"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#32abd7"
                    android:paddingTop="5dp"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_2_legend"
                            android:layout_height="45dp"
                            android:layout_width="45dp"
                            android:text="%"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            />
                        <TextView
                            android:id="@+id/category_2_name"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_width="95dp"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-light"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_2_count"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-light"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_2_volume"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#32abd7"
                    android:paddingTop="5dp"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_3_legend"
                            android:layout_height="45dp"
                            android:layout_width="45dp"
                            android:text="%"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            />
                        <TextView
                            android:id="@+id/category_3_name"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_width="95dp"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-light"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_3_count"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-light"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_3_volume"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#32abd7"
                    android:paddingTop="5dp"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_4_legend"
                            android:layout_height="45dp"
                            android:layout_width="45dp"
                            android:text="%"
                            android:gravity="center"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            />
                        <TextView
                            android:id="@+id/category_4_name"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_width="95dp"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-light"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_4_count"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:background="@android:color/transparent"
                            android:fontFamily="sans-serif-light"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/category_4_volume"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:padding="10dp"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                </TableRow>

                <TableRow
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="#32abd7"
                    android:paddingTop="5dp"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/summary_text"
                            android:padding="10dp"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:background="@android:color/transparent"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/summary_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:gravity="center"
                        >
                        <TextView
                            android:id="@+id/summary_volume"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="10dp"
                            android:gravity="center_horizontal"
                            android:textSize="24sp"
                            android:textColor="#ffffff"
                            android:fontFamily="sans-serif-light"
                            android:background="@android:color/transparent"
                            android:layout_gravity="center_horizontal"
                            />
                    </LinearLayout>
                </TableRow>
            </TableLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="#32abd7"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                >
                <TextView
                    android:id="@+id/run_text"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    />
                <TextView
                    android:id="@+id/run_value"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="24sp"
                    android:textColor="#ffffff"
                    android:fontFamily="sans-serif-light"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:paddingBottom="30dp"
            android:paddingTop="30dp"
            android:layout_below="@+id/common_layout"
            >
            <Button
                android:id="@+id/new_route_button"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"

                android:minWidth="230dp"
                android:minHeight="55dp"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:padding="15dp"
                android:textSize="22sp"
                android:textColor="#FFFFFFFF"
                android:textAllCaps="false"
                android:fontFamily="sans-serif-light"
                android:background="@drawable/custom_round_button_2"
                style="?android:attr/borderlessButtonStyle"
                />
        </RelativeLayout>
    </RelativeLayout>
</ScrollView>
